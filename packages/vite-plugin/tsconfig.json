{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["es2018"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "target": "es2018"
  },
  "include": ["src"]
}